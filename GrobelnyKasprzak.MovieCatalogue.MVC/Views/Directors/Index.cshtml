@model ICollection<GrobelnyKasprzak.MovieCatalogue.MVC.ViewModels.DirectorViewModel>

@{
    ViewData["Title"] = "Directors";
}

<div class="container mt-4">

    <h2 class="text-center mb-4">Directors</h2>

    <div class="d-flex gap-2 mb-2">
        <form asp-action="Index" method="get" class="d-flex gap-2">
            <input type="text"
                   name="search"
                   value="@ViewData["Search"]"
                   class="form-control"
                   placeholder="Search by name..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <a asp-action="Create" class="btn btn-secondary">Add New</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Movies</th>
                <th class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @string.Join(", ", item.Movies.Select(m => m.Title))
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>