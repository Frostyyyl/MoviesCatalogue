<UserControl x:Class="GrobelnyKasprzak.MovieCatalogue.WPF.Views.MoviesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GrobelnyKasprzak.MovieCatalogue.WPF">
    <UserControl.Resources>
        <local:NullToBoolConverter x:Key="NullToBoolConverter"/>

        <SolidColorBrush x:Key="PrimaryYellowBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="LightYellowBrush" Color="#FFECB3"/>
        <SolidColorBrush x:Key="HoverYellowBrush" Color="#FFD54F"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="LightBorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="BgCreamBrush" Color="#FFFAFAFA"/>
        <SolidColorBrush x:Key="WarmRedBrush" Color="#D32F2F"/>

        <Style x:Key="YellowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryYellowBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverYellowBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFB300"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#A0A0A0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource YellowButtonStyle}">
            <Setter Property="Background" Value="{StaticResource WarmRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E57373"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="ErrorBelowTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="textBoxProxy"/>
                <TextBlock Text="{Binding [0].ErrorContent}" 
                           Foreground="{StaticResource WarmRedBrush}" 
                           FontSize="11" 
                           Margin="2,2,0,0"
                           FontWeight="Medium"/>
            </StackPanel>
        </ControlTemplate>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightBorderBrush}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorBelowTemplate}"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryYellowBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                    <Setter Property="BorderBrush" Value="{StaticResource WarmRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightBorderBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryYellowBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightYellowBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryYellowBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" BorderThickness="0,0,0,3" BorderBrush="Transparent" Margin="0,0,10,0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="12,10"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryYellowBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryYellowBrush}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource BgCreamBrush}" Padding="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,15">
                    <Label Content="Search movies (title or director):" Foreground="Gray" FontSize="11" Padding="2,0,0,2"/>
                    <Border BorderBrush="{StaticResource LightBorderBrush}" BorderThickness="1" Background="White" CornerRadius="4">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 BorderThickness="0" Margin="5,2" Background="Transparent" 
                                 Validation.ErrorTemplate="{x:Null}"/>
                    </Border>
                </StackPanel>

                <Border BorderBrush="{StaticResource LightBorderBrush}" BorderThickness="1" Background="White" CornerRadius="4">
                    <ListView ItemsSource="{Binding Movies}" SelectedItem="{Binding SelectedMovie}" BorderThickness="0" Margin="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Title" Width="180" DisplayMemberBinding="{Binding Title}" />
                                <GridViewColumn Header="Year" Width="60" DisplayMemberBinding="{Binding Year}" />
                                <GridViewColumn Header="Genre" Width="120" DisplayMemberBinding="{Binding Genre}" />
                                <GridViewColumn Header="Director" Width="200" DisplayMemberBinding="{Binding DirectorName}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </DockPanel>

            <TabControl Grid.Column="1" Margin="20,0,0,0" SelectedIndex="{Binding SelectedTabIndex}" BorderThickness="0" Background="Transparent">

                <TabItem Header="Edit">
                    <StackPanel Margin="5,20,5,5" IsEnabled="{Binding SelectedMovie, Converter={StaticResource NullToBoolConverter}}">
                        <TextBlock Text="Edit movie details" FontSize="18" FontWeight="Light" Foreground="{StaticResource PrimaryYellowBrush}" Margin="0,0,0,15"/>

                        <Label Content="Title:" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EditTitle, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Content="Release Year:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EditYear, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Content="Genre:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding MovieGenres}" 
                                SelectedValue="{Binding EditGenre}" 
                                SelectedValuePath="."/>


                        <Label Content="Director:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding Directors}" 
                                  DisplayMemberPath="Name" 
                                  SelectedValuePath="Id" 
                                  SelectedValue="{Binding EditDirectorId}"/>

                        <UniformGrid Columns="2" Margin="0,30,0,0">
                            <Button Content="Update" Command="{Binding UpdateCommand}" Style="{StaticResource YellowButtonStyle}"/>
                            <Button Content="Delete" Command="{Binding DeleteCommand}" Style="{StaticResource DeleteButtonStyle}"/>
                        </UniformGrid>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Add New">
                    <StackPanel Margin="5,20,5,5">
                        <TextBlock Text="Create new movie" FontSize="18" FontWeight="Light" Foreground="{StaticResource PrimaryYellowBrush}" Margin="0,0,0,15"/>

                        <Label Content="Title:" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Content="Release Year:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding NewYear, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                        
                        <Label Content="Genre:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding MovieGenres}" 
                              SelectedValue="{Binding NewGenre}" 
                              SelectedValuePath="."/>


                        <Label Content="Director:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding Directors}" 
                                  DisplayMemberPath="Name" 
                                  SelectedValuePath="Id" 
                                  SelectedValue="{Binding NewDirectorId}"/>

                        <Button Content="SAVE NEW MOVIE" 
                                Command="{Binding CreateCommand}" 
                                Style="{StaticResource YellowButtonStyle}"
                                Margin="0,30,0,0" Height="45"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>