<UserControl x:Class="GrobelnyKasprzak.MovieCatalogue.WPF.Views.DirectorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GrobelnyKasprzak.MovieCatalogue.WPF">
    <UserControl.Resources>
        <local:NullToBoolConverter x:Key="NullToBoolConverter"/>

        <SolidColorBrush x:Key="PrimaryYellowBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="LightYellowBrush" Color="#FFECB3"/>
        <SolidColorBrush x:Key="HoverYellowBrush" Color="#FFD54F"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="LightBorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="BgCreamBrush" Color="#FFFAFAFA"/>
        <SolidColorBrush x:Key="WarmRedBrush" Color="#D32F2F"/>
        <Style x:Key="YellowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryYellowBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverYellowBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFB300"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#A0A0A0"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource YellowButtonStyle}">
            <Setter Property="Background" Value="{StaticResource WarmRedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E57373"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#A0A0A0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <ControlTemplate x:Key="ErrorBelowTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="textBoxProxy"/>
                <TextBlock Text="{Binding [0].ErrorContent}" 
                           Foreground="{StaticResource WarmRedBrush}" 
                           FontSize="11" 
                           Margin="2,2,0,0"
                           FontWeight="Medium"/>
            </StackPanel>
        </ControlTemplate>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightBorderBrush}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorBelowTemplate}"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryYellowBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                    <Setter Property="BorderBrush" Value="{StaticResource WarmRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightYellowBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryYellowBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF8E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" BorderThickness="0,0,0,3" BorderBrush="Transparent" Margin="0,0,10,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="12,10"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryYellowBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryYellowBrush}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource HoverYellowBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource BgCreamBrush}" Padding="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0">
                <StackPanel DockPanel.Dock="Top"  Margin="0,0,0,10">
                <Label Content="Search directors:"
                Foreground="Gray"
                FontSize="11"/>

                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,5"/>
                </StackPanel>
            <Border Grid.Column="0" BorderBrush="{StaticResource LightBorderBrush}" BorderThickness="1" Background="White" CornerRadius="4">
                <ListView ItemsSource="{Binding Directors}" 
                          SelectedItem="{Binding SelectedDirector}" 
                          BorderThickness="0" Margin="2">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Surname" Width="260" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Year" Width="80" DisplayMemberBinding="{Binding BirthYear}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
            </DockPanel>

            <TabControl Grid.Column="1" Margin="20,0,0,0" SelectedIndex="{Binding SelectedTabIndex}" BorderThickness="0" Background="Transparent">

                <TabItem Header="Edit">
                    <StackPanel Margin="5,20,5,5" IsEnabled="{Binding SelectedDirector, Converter={StaticResource NullToBoolConverter}}">
                        <TextBlock Text="Edit details" FontSize="18" FontWeight="Light" Foreground="{StaticResource PrimaryYellowBrush}" Margin="0,0,0,15"/>

                        <Label Content="Surname:" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Content="Birth Year:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EditBirthYear, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <UniformGrid Columns="2" Margin="0,30,0,0">
                            <Button Content="Update" Command="{Binding UpdateCommand}" Style="{StaticResource YellowButtonStyle}"/>
                            <Button Content="Delete" Command="{Binding DeleteCommand}" Style="{StaticResource DeleteButtonStyle}"/>
                        </UniformGrid>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Add New">
                    <StackPanel Margin="5,20,5,5">
                        <TextBlock Text="Create new director" FontSize="18" FontWeight="Light" Foreground="{StaticResource PrimaryYellowBrush}" Margin="0,0,0,15"/>

                        <Label Content="Surname:" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Label Content="Birth Year:" Margin="0,15,0,0" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding NewBirthYear, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

                        <Button Content="SAVE NEW DIRECTOR" 
                                Command="{Binding CreateCommand}" 
                                Style="{StaticResource YellowButtonStyle}"
                                Margin="0,30,0,0"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>